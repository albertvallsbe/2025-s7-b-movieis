		"build-w": "tsc -w",
		"start": "node .",
		"start-w": "nodemon -q .",
		"lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
		"format": "prettier --write .",
		"typecheck": "tsc --noEmit",
